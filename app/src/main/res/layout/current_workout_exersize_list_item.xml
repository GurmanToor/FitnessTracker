<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="152dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"
        >

        <LinearLayout
            android:layout_width="363dp"
            android:layout_height="133dp"
            android:background="@drawable/round_corners"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="334dp"
                android:layout_height="111dp"
                android:background="@drawable/round_corners_grey"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="69dp"
                        android:layout_height="66dp"
                        android:layout_marginTop="4dp"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/exercise_icon"
                            android:layout_width="69dp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="false"
                            android:background="@color/black"
                            android:cropToPadding="false"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/workout" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/edit_exercise_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:tint="@android:color/holo_blue_dark"
                            app:srcCompat="@android:drawable/ic_menu_edit" />

                        <ImageView
                            android:id="@+id/delete_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:tint="@android:color/holo_red_dark"
                            app:srcCompat="@android:drawable/ic_menu_delete" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="265dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="240dp"
                            android:layout_height="match_parent"
                            android:layoutDirection="ltr">

                            <TextView
                                android:id="@+id/exercise_length_title"
                                android:layout_width="77dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_bold"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:text="Time Length"
                                android:textAlignment="viewStart"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/exercise_length"
                                android:layout_width="117dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_bold"
                                android:paddingStart="10dp"
                                android:paddingTop="10dp"
                                android:text="length"
                                android:textAlignment="viewStart"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/exercise_type_title"
                            android:layout_width="123dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:text="Exercise Type"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/exercise_type"
                            android:layout_width="160dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:text="ExerciseType"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/body_part_title"
                            android:layout_width="123dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:text="Body Part"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/body_part"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_bold"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:text="TextView"
                            android:textAlignment="viewStart"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>